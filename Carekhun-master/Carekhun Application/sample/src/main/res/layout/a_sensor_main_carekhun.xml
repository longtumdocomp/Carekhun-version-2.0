<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="180"
            app:srcCompat="@drawable/ic_arrow_forward_white_24px"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/img_calories" />

        <ImageView
            android:id="@+id/img_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow_forward_white_24px"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/img_heart" />

        <TextView
            android:id="@+id/heart_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_alignBaseline="@+id/sleep_val"
            android:layout_alignBottom="@+id/sleep_val"
            android:layout_alignStart="@+id/heart_label"
            android:layout_alignEnd="@+id/heart_label" />

        <TextView
            android:id="@+id/sleep_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/calories_val"
            android:layout_alignBottom="@+id/calories_val"
            android:text="0.2"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_alignEnd="@+id/sleep_label"
            android:layout_alignStart="@+id/sleep_label" />

        <TextView
            android:id="@+id/calories_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/calories_label"
            android:layout_alignStart="@+id/calories_label"
            android:layout_below="@+id/calories_label"
            android:layout_marginTop="16dp"
            android:text="1 kcal"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/heart_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/sleep_label"
            android:layout_alignBottom="@+id/sleep_label"
            android:layout_alignStart="@+id/img_heart"
            android:layout_marginStart="29dp"
            android:text="Heart"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sleep_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/calories_label"
            android:layout_alignBottom="@+id/calories_label"
            android:layout_centerHorizontal="true"
            android:text="Sleep"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/calories_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/img_calories"
            android:layout_below="@+id/img_calories"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="17dp"
            android:text="Calories"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_heart"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignTop="@+id/img_sleep"
            android:layout_marginStart="13dp"
            android:layout_toEndOf="@+id/img_sleep"
            app:srcCompat="@drawable/heartrate_icon_resize" />

        <ImageView
            android:id="@+id/img_sleep"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignTop="@+id/img_calories"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/sleep_icon_resize" />

        <ImageView
            android:id="@+id/img_calories"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txt_user_name"
            android:layout_marginStart="12dp"
            android:layout_marginTop="31dp"
            android:paddingLeft="0dp"
            app:srcCompat="@drawable/running_icon" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            app:srcCompat="@drawable/ic_no_user" />

        <TextView
            android:id="@+id/txt_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp"
            android:text="Suttipong Kullawattana"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>
